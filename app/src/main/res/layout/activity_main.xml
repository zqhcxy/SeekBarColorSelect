<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.zqhcxy.seekbarcolorselect.MainActivity">

    <TextView
        android:id="@+id/tv_color_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Hello World!"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_color_bg"
        android:maxHeight="4dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:progress="50"
        />
    <!--android:background="@mipmap/hue"-->
    <!--android:progressDrawable="@drawable/progress"-->
    <!--android:progressDrawable="@mipmap/sexiang"-->
    <SeekBar
        android:id="@+id/seekbar_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:maxHeight="4dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:progress="50"
        />
    <!--android:progressDrawable="@drawable/hue_s"-->
    <!--android:progressDrawable="@drawable/progress_fill_2"-->
    <SeekBar
        android:id="@+id/seekbar_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_s"
        android:maxHeight="4dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:progress="50"
        />
    <!--android:layout_below="@+id/seekbar_s"-->

    <SeekBar
        android:id="@+id/dial_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/seekbar_v"
        android:layout_centerInParent="true"
        android:max="99"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:progress="63"/>
    <!--android:background="@color/material_blue_grey_900"-->

    <ImageView
        android:id="@+id/show_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/take_bt"/>

    <Button
        android:id="@+id/take_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:progress="50"
        android:text="take"/>

</RelativeLayout>
